{
  "name": "trading-intelligence-dashboard",
  "version": "1.0.0",
  "description": "Unified VIGL Discovery and Portfolio Management Dashboard",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:v1": "cross-env SELECT_ENGINE=v1 node server.js",
    "start:optimized": "cross-env SELECT_ENGINE=optimized node server.js",
    "test:e2e": "node scripts/e2e_verify.js",
    "migrate": "node scripts/init_db.js",
    "dev": "nodemon server.js || node server.js",
    "dev:alpha": "node -r dotenv/config server.js dotenv_config_path=.env.alpha",
    "dev:css": "npx tailwindcss -i public/tw.css -o public/assets/tailwind.css --watch",
    "build": "echo 'No build step required for Node.js app'",
    "build:css": "npx tailwindcss -i public/tw.css -o public/assets/tailwind.css --minify",
    "test": "jest",
    "scan": "node -e \"require('./server/jobs/capture').runDiscoveryCapture().catch(console.error)\"",
    "db:status": "node -e \"const db = require('./server/db/sqlite'); console.log('Database initialized:', !!db.db)\"",
    "health": "curl -f http://localhost:3001/api/health || echo 'Server not running'",
    "render:build": "npm install && node scripts/verify_getcompanyprofile.js",
    "render:start": "NODE_ENV=production node server.js",
    "watchdog": "node scripts/engine_watchdog.js",
    "verify": "node scripts/verify_getcompanyprofile.js",
    "universe:build2": "python3 scripts/build_universe_v2.py --days 30",
    "debug:compare": "ts-node scripts/compare-screeners.ts",
    "smoke:scan": "curl \"http://localhost:3003/api/scan/today?refresh=1\" && sleep 2 && curl -s http://localhost:3003/api/scan/status | jq '{relaxation_active, gateCounts, current_thresholds, polygon}' && curl -s http://localhost:3003/api/scan/results | jq '.[0]'"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "node-fetch": "^2.7.0",
    "p-limit": "^6.2.0",
    "technicalindicators": "^3.1.0",
    "uuid": "^11.1.0",
    "yahoo-finance2": "^2.13.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "jest": "^30.0.5",
    "tailwindcss": "^4.1.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "@types/node": "^20.12.12"
  }
}
