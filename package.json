{
  "name": "trading-intelligence-dashboard",
  "version": "1.0.0",
  "description": "Unified VIGL Discovery and Portfolio Management Dashboard",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "migrate": "node scripts/init_db.js",
    "dev": "nodemon server.js || node server.js",
    "build": "echo 'No build step required for Node.js app'",
    "test": "node -e \"console.log('Tests not implemented yet')\"",
    "scan": "node -e \"require('./server/jobs/capture').runDiscoveryCapture().catch(console.error)\"",
    "db:status": "node -e \"const db = require('./server/db/sqlite'); console.log('Database initialized:', !!db.db)\"",
    "health": "curl -f http://localhost:3001/api/health || echo 'Server not running'",
    "render:build": "npm install",
    "render:start": "NODE_ENV=production node server.js"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "node-fetch": "^3.3.2",
    "uuid": "^11.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
