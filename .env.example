# Trading Dashboard Environment Variables

# Alpaca Trading API (Required for portfolio and market data)
APCA_API_KEY_ID=your_alpaca_api_key_here
APCA_API_SECRET_KEY=your_alpaca_secret_key_here
APCA_API_BASE_URL=https://paper-api.alpaca.markets

# Polygon Market Data API (Required for historical data)
POLYGON_API_KEY=your_polygon_api_key_here

# Borrow/Short Interest Provider (Required - strict mode)
BORROW_SHORT_PROVIDER=fintel
BORROW_SHORT_API_KEY=your_fintel_api_key_here

# Data Freshness Thresholds (Optional - defaults shown)
FRESH_POLYGON_S=90
FRESH_ALPACA_S=60
FRESH_BORROW_S=86400

# Admin Security (Optional)
ADMIN_TOKEN=your_secure_admin_token_here

# Database (Optional - defaults to local SQLite)
SQLITE_DB_PATH=./trading_dashboard.db

# Scoring Weights (Optional - JSON format with new volume-focused algorithm)
SCORING_WEIGHTS_JSON={"short_interest_weight":2.0,"borrow_fee_weight":1.5,"volume_weight":2.0,"volume_spike_weight":2.5,"momentum_weight":1.5,"catalyst_weight":1.0,"market_cap_weight":0.8,"float_penalty_weight":0.6}

# Scan Configuration (Optional)
SCAN_SYMBOLS=AAPL,TSLA,NVDA,AMD,MSFT,AMZN,META,GOOGL

# Server Configuration (Optional)
PORT=3001
NODE_ENV=production

# Engine Selection
SELECT_ENGINE=optimized

# Feature Flags
FORCE_V2_FALLBACK=false
ALPHASTACK_V3_ENABLED=true
V3_PERFORMANCE_MODE=true
V3_REAL_TIME_UPDATES=true
NEW_DASH_ENABLED=true